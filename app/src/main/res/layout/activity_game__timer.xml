<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itmc.instanttrivia.Game_Timer">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_view_mat_indigo500top"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/linear_topbar">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Instant Trivia"
            android:id="@+id/text_timer_name"
            android:clickable="false"
            android:textSize="20sp"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:gravity="left" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Score"
            android:id="@+id/textView3"
            android:clickable="false"
            android:textSize="20sp"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:gravity="right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/text_question"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/linear_topbar"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:gravity="center"
        android:background="@color/indigo_500"
        android:textSize="20sp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_mat_red500top"
        android:id="@+id/linear_answer"
        android:layout_below="@+id/text_question"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:id="@+id/linear_ans_first"
        android:gravity="center"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_ans_first"
        android:layout_centerHorizontal="true"
        android:id="@+id/lineage_ans_second"
        android:gravity="center"></LinearLayout>
</RelativeLayout>
