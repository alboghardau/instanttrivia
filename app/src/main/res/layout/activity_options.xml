<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.itmc.instanttrivia.Options"
    android:paddingTop="15dp"
    android:focusableInTouchMode="false"
    android:focusable="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layoutMode="clipBounds"
        android:outlineProvider="background"
        android:background="@drawable/back_white"
        android:layout_margin="10dp"
        android:elevation="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Color Style"
            android:id="@+id/textView8"
            android:padding="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView15"
            android:singleLine="false"
            android:background="@color/grey_500" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/options_ripple"
            android:clickable="true"
            android:id="@+id/linear_opt_red"
            android:onClick="onRadioButtonClicked">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView12"
                android:background="@color/red_500"
                android:autoText="false"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Red" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_red"
                android:checked="false"
                android:enabled="true"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/options_ripple"
            android:clickable="true"
            android:id="@+id/linear_opt_blue"
            android:onClick="onRadioButtonClicked">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView11"
                android:background="@color/blue_500"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Blue"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="10dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_blue"
                android:checked="false"
                android:enabled="true"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/options_ripple"
            android:clickable="true"
            android:id="@+id/linear_opt_lgreen"
            android:onClick="onRadioButtonClicked">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView10"
                android:background="@color/light_green_500"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Light Green"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="10dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_lgreen"
                android:checked="false"
                android:enabled="true"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/options_ripple"
            android:clickable="true"
            android:id="@+id/linear_opt_purple"
            android:onClick="onRadioButtonClicked">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView13"
                android:background="@color/purple_500"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Purple"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="10dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radion_purple"
                android:checked="false"
                android:enabled="true"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/options_ripple"
            android:clickable="true"
            android:id="@+id/linear_opt_orange"
            android:onClick="onRadioButtonClicked">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView14"
                android:background="@color/orange_500"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Orange"
                android:autoText="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_orange"
                android:checked="false"
                android:enabled="true"
                android:focusable="false"
                android:clickable="false" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
